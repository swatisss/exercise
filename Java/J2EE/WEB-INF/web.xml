<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
   http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
   version="3.0"
   metadata-complete="true">

    <servlet>
        <servlet-name>sessionstart</servlet-name>
        <servlet-class>servlets.SessionStartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionstart</servlet-name>
        <url-pattern>/sessionstart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sessionend</servlet-name>
        <servlet-class>servlets.SessionEndServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionend</servlet-name>
        <url-pattern>/sessionend</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartinfo</servlet-name>
        <jsp-file>/cartinfo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartinfo</servlet-name>
        <url-pattern>/cartinfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>confirm</servlet-name>
        <jsp-file>/UserRegisterConfirm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>confirm</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>

</web-app>
